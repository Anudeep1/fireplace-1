@import 'lib';

.container-detail {
    background-color: #fff;
    margin: 10px 0 0;

    .placeholder > * {
        padding: 20px 15px;
    }
    .segment {
        border-top: 1px solid $greyscale-light-grey;
    }
    .prose h3 {
        font-size: 15px;
        font-weight: 400;
        line-height: 1;
        text-transform: uppercase;
    }
    .mkt-addon-name {
        color: $tile-title;
        font-size: 20px;
        font-weight: 300;
        line-height: 1.2;
    }
}

.addon-install-btn {
    border-radius: 5px;
    display: block;
    width: 100%;
}

.addon-tile-info {
    padding: 0 0 10px;

    .mkt-product-author {
        font-size: 13px;
        margin: 0;
    }
}

.addon-meta p {
    color: $action-neutral;
    line-height: 1.6;
}

// TODO: Use this for apps and move it in its own file.
.container-list {
    margin: 10px 0 0;
}

.addon-tile {
    display: block;
}

a.addon-tile:hover {
    text-decoration: none;
}

.addon-list {
    list-style: none;
    margin: -10px;

    > li {
        padding: 20px 15px;

        &:first-child {
            padding-top: 0;
        }
        &:nth-child(even) {
            background-color: $salt-flat-white;
        }
    }
    .mkt-addon-name {
        color: $tile-title;
        font-size: 20px;
        font-weight: 200;
        line-height: 21px;
    }
    .addon-install-btn {
        display: inline-block;
        font-size: 12px;
        height: 28px;
        width: auto;
    }
}
