@import 'lib';


[data-page-type~="games"] {
    #page {
        background: linear-gradient($greyscale-dark-grey-hover,
                                    $greyscale-dark-grey);
        min-height: 100%;
        padding-top: 0;
    }
}

.games {
    display: flex;
    height: 100%;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;

    > section {
        padding: 30px 120px;
        width: 100%;
    }
}

.games-title {
    align-content: center;
    background: #006DBF;
    display: flex;
    justify-content: center;
    margin-bottom: 30px;
    padding: 20px 0;
    width: 100%;

    h1 {
        color: $greyscale-white;
        font-weight: 300;
    }
}

.games-playarea {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    position: relative;
    width: 100%;
}

.gamepad {
    category-sprite(2);
    category-icon-position('games', 2);
    background-image: url('../img/pretty/categories-sprite-black.svg');
    position: absolute;
    bottom: 50px;
    transform: rotate(-20deg) scale(2);
    right: 140px;
    z-index: 0;
}

.gamescreen-wrapper {
    background: $greyscale-black;
    display: flex;
    justify-content: center;
    margin-top: 30px;
    position: relative;
    width: 85%;
    z-index: 1;
}

.gamescreen {
    border: 10px solid $greyscale-black;
    border-radius: 5px;
    box-shadow: none;
    display: block;
    height: auto;
    position: relative;
    width: 100%;

    img {
        cursor: pointer;
        width: 100%;
    }

    &:hover .start-hero-game:before {
        opacity: 1;
    }

    .start-hero-game {
        background: transparent;
        border: none;
        position: absolute;
        left: 50%;
        bottom: 50px;

        &:before {
            $icon-height = 30px;
            content: "";
            border-color: transparent transparent transparent white;
            border-style: solid;
            border-width: $icon-height $icon-height * 1.5;
            display: block;
            margin: -1 * $icon-height 0 0 -1 * $icon-height;
            opacity: 0.8;
        }
    }
}

.gamescreen-stand-wrapper {
    display: flex;
    justify-content: center;
    position: relative;
    width: 100%;
}

.gamescreen-stand {
    border-left: 100px solid transparent;
    border-right: 100px solid transparent;
    border-bottom: 50px solid $greyscale-black;
    font-size: 0;
    height: 0;
    line-height: 0;
    margin-bottom: 60px;
    margin-top: -5px;
    width: 0;
}

section.game-information {
    background: $greyscale-grey-hover;
    display: flex;
    justify-content: space-between;
    padding-bottom: 0;
}

.game-name,
.game-author {
    color: $greyscale-black;
    font-weight: 300;

    span {
        font-weight: 400;
    }
}

.game-name {
    font-size: 30px;
}

.game-author {
    margin-top: 10px;
}

.game-link {
    color: $greyscale-white;
    background: $action-positive;
    border-radius: 5px;
    padding: 15px;
}

.game-install-prompt {
    span {
        color: $greyscale-black;
        margin-right: 15px;
    }
}

.game-info {
    align-items: flex-start;
    display: flex;
}

.game-icon {
    max-height: 128px;
    position: relative;
    top: -20px;
}

.games-selector {
    background: $greyscale-light-grey;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.games-selector-title {
    color: $greyscale-black;
    font-size: 24px;
    margin-bottom: 20px;
    text-align: center;
    width: 100%;
}

.games-item {
    background-size: cover;
    height: 128px;
    margin: 10px 2.5%;
    width: 20%;

    &:hover {
        box-shadow: 0px 0px 1px 1px $action-positive;
        cursor: pointer;
    }
}

.games-explore-more {
    background: $action-positive;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;

    h2 {
        color: $greyscale-white;
        font-size: 24px;
        margin: 0;
        padding: 0;
        text-align: center;
        width: 100%;
    }
}

.games-exit-links {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    width: 100%;
}

.games-exit-links a {
    align-items: center;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    height: 100px;
    margin: 0 20px;
    width: 256px;

    &:hover {
        text-decoration: none;
    }
    p {
        color: $greyscale-white;
        font-size: 20px;
    }
}

.games-exit-link--games {
    background: radial-gradient($color-collection--aquamarine,
                                darken($color-collection--aquamarine, 10%));

    &:hover {
        background: radial-gradient(lighten($color-collection--aquamarine, 20%),
                                    lighten($color-collection--aquamarine, 10%));
    }
}

.games-exit-link--apps {
    background: radial-gradient($color-collection--sapphire,
                                darken($color-collection--sapphire, 10%));

    &:hover {
        background: radial-gradient(lighten($color-collection--sapphire, 20%),
                                    lighten($color-collection--sapphire, 10%));
    }
}
